{
    "manifest_version": 2,
    "name": "Easy Weather",
    "description": "A simple weather app to provide current weather conditions and forecasts.",
    "version": "0.2.1",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "tabs",
        "geolocation"
    ],
    "chrome_url_overrides" : {
        "newtab": "index.html"
    },
    "browser_action": {
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
}
